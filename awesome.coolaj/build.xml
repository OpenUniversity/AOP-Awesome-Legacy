<project name="awesome.coolaj">
	<property name="classes.dir" value="bin"/>
	<property name="jar.dir" value="${ant.project.name}.jar"/>
	
	<target name="clean">
		<delete dir="${jar.dir}"/>
	</target>
	
	<target name="jar">
		<mkdir dir="${jar.dir}"/>
		<jar destfile="${jar.dir}/${ant.project.name}.jar" basedir="${classes.dir}"></jar>
	</target>
</project>
